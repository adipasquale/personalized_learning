<h1>Admin Page</h1>

<div class="row-fluid">

  <div class="span4">
    <h2> Users </h2>
    <ul>
      <% @users.each do |user| %>
        <li>
          <%= link_to user.login, user %>
          (<%= link_to "delete", user, method: :delete,
            data: { confirm: "You sure 100% ?" } %>)
        </li>
      <% end %>
      <li> <%= link_to "New user", new_user_path %> </li>
    </ul>
  </div>

  <div class="span4">
    <h2> Traits </h2>
    <ul>
      <% @traits.each do |trait| %>
        <li>
          <%= trait.name %>
          <%= "[#{trait.options.pluck(:value).join(", ")}]" unless trait.options.empty? %>
          <%= link_to " (edit)", edit_trait_path(trait) %>
          (<%= link_to "delete", trait, method: :delete,
            data: { confirm: "You sure 100% ?" } %>)
        </li>
      <% end %>
      <li> <%= link_to "New trait", new_trait_path %> </li>
    </ul>
  </div>

  <div class="span4">
    <h2> Tasks </h2>
    <ul>
      <% @tasks.each do |task| %>
        <li>
          <%= task.name %>
          <%= link_to " (edit)", edit_task_path(task) %>
          <%= link_to " (delete)", task, method: :delete,
            data: { confirm: "You sure 100% ?" } %>
        </li>
      <% end %>
      <li><%= link_to "New task", new_task_path %></li>
    </ul>
  </div>

</div>
