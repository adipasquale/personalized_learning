<h1>My Profile</h1>

<div class="row-fluid">
  <div class="span12">
    <%= form_for(@user, :html => {:class => "form-horizontal"}) do |f| %>

      <%= render 'shared/error_messages', {object: @user} %>

      <%= f.fields_for :user_traits do |ff| %>
        <div class="control-group">
          <% if ff.object.options.empty? %>
            <%= ff.label :value, ff.object.name, :class => "control-label" %>
            <div class="controls">
              <%= ff.text_field :value %>
            </div>
          <% else %>
            <%= ff.label :option_id, ff.object.name, :class => "control-label" %>
            <div class="controls">
              <%= ff.collection_select :option_id, ff.object.options, :id, :value %>
            </div>
          <% end %>
        </div>
      <% end %>

      <div class="control-group">
        <div class="controls">
          <%= f.submit "Update", class: "btn btn-large btn-primary" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
