<div class="row">
  <div class="span6 offset3">
    <h1>New User</h1>

    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', {object: @user} %>

      <%= f.label :login %>
      <%= f.text_field :login %>

      <%= f.submit "Create", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

